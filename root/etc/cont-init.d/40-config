#!/usr/bin/with-contenv bash

# download config.json
if [ "${CUSP}" = true ] && [ ! -e /config/config.json ]
then
  wget -P /config https://cdn.jsdelivr.net/gh/JunzhouLiu/BILIBILI-HELPER@main/src/main/resources/config.json
  rm -f /app/config.json
  cp /config/config.json /app/config.json
  chown -R root:root /app/config.json
elif [ "${CUSP}" = true ] && [ -e /config/config.json ]
then
  rm -f /app/config.json
  cp /config/config.json /app/config.json
  chown -R root:root /app/config.json
elif [[ "${CUSP}" = false ]]
then
  rm -f /config/config.json
  rm -f /app/config.json
fi

#Â permissions
chown -R abc:abc \
    /config
